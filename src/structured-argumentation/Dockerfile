# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
# Dockerfile for structured-argumentation MCP server

# Build stage
FROM node:lts-alpine AS build

# Create app directory
WORKDIR /app

# Copy root tsconfig for workspace tsconfig extending
COPY tsconfig.json ./

# Copy workspace package and tsconfig
COPY src/structured-argumentation/package.json src/structured-argumentation/
COPY src/structured-argumentation/tsconfig.json src/structured-argumentation/

# Copy source files
COPY src/structured-argumentation/index.ts src/structured-argumentation/

# Install dependencies and build in workspace
WORKDIR /app/src/structured-argumentation
RUN npm install
RUN npm run build

# Runtime stage
FROM node:lts-alpine AS runner

WORKDIR /app

# Copy built artifacts
COPY --from=build /app/src/structured-argumentation/dist ./dist
# Copy package.json and runtime dependencies
COPY --from=build /app/src/structured-argumentation/package.json ./
COPY --from=build /app/src/structured-argumentation/node_modules ./node_modules

# Set production environment
ENV NODE_ENV=production

# Entrypoint
ENTRYPOINT ["node", "dist/index.js"]
