# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
# syntax=docker/dockerfile:1
FROM node:lts-alpine AS builder
WORKDIR /app

# Copy service package and tsconfig
COPY src/metacognitive-monitoring/package.json ./package.json
COPY src/metacognitive-monitoring/tsconfig.json ./tsconfig.json
COPY src/metacognitive-monitoring/*.ts ./

# Copy root tsconfig for TypeScript extend resolution
COPY tsconfig.json /tsconfig.json

# Install dependencies and build
RUN npm install
RUN npm run build

FROM node:lts-alpine AS runtime
WORKDIR /app

# Copy built artifacts and package info
COPY --from=builder /app/dist ./dist
COPY src/metacognitive-monitoring/package.json ./package.json

# Install only production dependencies, ignore scripts to avoid prepare
RUN npm install --omit=dev --ignore-scripts

# Environment
ENV NODE_ENV=production
ENV PORT=8080
EXPOSE 8080

CMD ["node", "dist/index.js"]
